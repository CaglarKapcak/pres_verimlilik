{
  "machine_id": 1,
  "api_url": "http://localhost:8000",
  "update_interval": 1,
  "sensors": {
    "current": {
      "enabled": true,
      "pin": 0,
      "calibration_factor": 25.0
    },
    "temperature": {
      "enabled": true,
      "pin": 1,
      "min_voltage": 0.5,
      "max_voltage": 5.0,
      "min_temp": 0,
      "max_temp": 500
    },
    "proximity": {
      "enabled": true,
      "pin": 17,
      "pull_up": true
    }
  },
  "log_level": "INFO",
  "max_retries": 3,
  "retry_delay": 5,
  "timeout": 10,
  "enable_heartbeat": true,
  "heartbeat_interval": 60
}
